<p id="notice"><%= notice %></p>

<h1><%= t('view.task.task_lists') %></h1>

<%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |f| %>

  <div class="field">
    <%= f.label :title_search, t('view.task.title') %>
    <%= f.text_field :title, value: @search_params[:title] %>
  </div>

  <div class="field">
    <%= f.label :status_search, t('view.task.status') %>
    <%= f.select :status, Task.statuses.keys.map {|k| [I18n.t("enums.tasks.status.#{k}"), k]}, include_blank: "選択して下さい", value: @search_params[:status] %>
  </div>

  <%= f.submit t('view.task.search') %>

<% end %>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "作成日時でソートする", tasks_path(sort_created: "true") %>

<table>
  <thead>
    <tr>
      <th><%= t('view.task.title') %></th>
      <th><%= t('view.task.content') %></th>
      <th><%= t('view.task.deadline') %></th>
      <th><%= t('view.task.status') %></th>
      <th><%= t('view.task.priority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status_i18n %></td>
        <td><%= task.priority_i18n %></td>
        <td><%= link_to t('view.task.content'), task %></td>
        <td><%= link_to t('view.task.edit_button'), task_path(task) %></td>
        <td><%= link_to t('view.task.destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<br>

<%= link_to 'タスクを登録する', action: "new" %>
