<div class="login_container">
  <div class="panel panel-default center-block">
    <div class="panel-body text-center">
      <div class="logo">
        <h2 class="logo_size">ログイン</h2>
      </div>
      <div class="form-row">
        <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
          </div>
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          <p class="logo_size title_border"> または </p>
          <a herf="#">パスワードを忘れた場合</a>
        <% end %>
      </div>
    </div>
  </div>

  <div class="panel panel-default center-block">
    <div class="panel-body text-center">
      <span>アカウントをお持ちでないですか？</span>
        <strong><%= link_to t('view.user.sign_up'), new_user_path %></strong>
    </div>
  </div>
</div>
