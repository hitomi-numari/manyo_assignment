<div class="login_container">
  <div class="panel panel-default center-block">
    <div class="panel-body text-center">
      <div class="logo">
        <h2 class="logo_size"><%=t('view.user.sign_up')%></h2>
      </div>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <h2><%= pluralize(@user.errors.count, t('view.user.error')) %><%= @user.name %></h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
     <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: 'お名前', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, placeholder: 'メールアドレス', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: 'パスワード', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: '確認用パスワード', class: "form-control" %>
      </div>
        <%= f.submit t('view.user.register'), class:'btn btn-primary' %>
     <% end %>
   </div>
 </div>
</div>

<div class="panel panel-default center-block">
  <div class="panel-body text-center">
    <span>アカウントをお持ちですか？</span>
      <strong><%= link_to "ログインする", new_session_path %></strong>
  </div>
</div>
